<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row justify-content-center">
        <div class="col-10 col-lg-6 border border-dark pt-2 mt-3">
          <div class="text-end me-1">
            <%= GoodEvent.human_attribute_name(:date) %>
            <%= l @good_event.date, format: :short %>
          </div>
          <div class="h2 text-center text-decoration-underline">
            <%= @good_event.title %>
          </div>
          <div class="row mx-1">
            <div class="col">
              <%= GoodEvent.human_attribute_name(:body) %>
            </div>
            <div class="col text-end">
              <%= link_to t('defaults.back'), memory_path(@good_event.memory) %>
              <%= link_to t('defaults.edit'), edit_good_event_path %>
            </div>
          </div>
          <div class="col-10 mx-auto bg-white">
            <div class="p-1 border border-dark my-4 event-content">
              <%= simple_format(@good_event.body) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
