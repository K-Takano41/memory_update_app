<div class="container pt-3">
  <div class="row justify-content-center">
    <h2 class="text-center"><%= t('.title') %></h2>
    <div class="col-10 col-lg-6 bg-light py-3 border">
      <div class="col-10 col-lg-6 mx-auto">
        <%= link_to t('defaults.edit'), edit_profiles_path, class: "float-end" %>
        <div class="my-3">
          <%= User.human_attribute_name(:name) %>
          <p class="ps-2 py-2 mt-2 border-dark border-bottom"><%= current_user.name %></p>
        </div>
        <div class="my-3">
          <%= User.human_attribute_name(:email) %>
          <p class="ps-2 py-2 mt-2 border-dark border-bottom"><%= current_user.email %></p>
        </div>
        <%= link_to t('.account_delete'), user_path(current_user), data: { turbo_method: :delete, turbo_confirm: t('.confirm_message') }, class: "float-end" %>
      </div>
    </div>
  </div>
</div>