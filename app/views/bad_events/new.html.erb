<%= turbo_frame_tag "modal" %>
<div class="container-fuild vh-100">
  <div class="row">
    <div class="col-6 bg-white border border-dark pt-3 mt-5 mx-auto">
      <h2 class="text-center mt-2"><%= t('.title') %></h2>
      <%= bootstrap_form_with(model: @bad_event, data: { turbo_frame: "modal"}) do |form| %>
        <div class="col-10 mx-auto my-4">
          <%= form.text_area :body, skip_label: true, rows: "10" %>
        </div>
        <div class="text-center mb-3">
          <%= form.primary %>
        </div>
      <% end %>
    </div>
  </div>
</div>