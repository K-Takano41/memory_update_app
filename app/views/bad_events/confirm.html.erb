<%= turbo_frame_tag "bad_event_confirm" do %>
  <%= turbo_frame_tag "modal" %>
  <h3 class="text-center mt-2"><%= t('.title') %></h3>
  <div class="col-10 mx-auto my-4">
    <div class="mb-3">
      <div class="form-label">
        <%= BadEvent.human_attribute_name(:body) %>
      </div>
      <div class="form-control border-0" style="height: 240px;">
        <%= @bad_event.body %>
      </div>
    </div>
  </div>
  <%= bootstrap_form_with(model: @bad_event, data: { turbo_frame: "modal"}) do |form| %>
    <%= form.hidden_field :body %>
    <div class="text-center mb-3">
      <%= form.primary %>
      <%= form.submit t('defaults.back'), name: :back %>
    </div>
  <% end %>
<% end %>