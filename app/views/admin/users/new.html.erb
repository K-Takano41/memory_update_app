<div class="card shadow mt-3">
  <div class="card-header">
    <%= t('defaults.register') %>
  </div>
  <div class="card-body mx-3">
    <div>
      <%= bootstrap_form_with(model: @user, url: admin_users_path(@user), local: true) do |form| %>
        <%= form.text_field :name %>
        <%= form.email_field :email %>
        <%= form.password_field :password, help: t('users.new.password_html') %>
        <%= form.password_field :password_confirmation %>
        <%= form.select :role, User.roles_i18n.invert  %>
        <%= form.primary %>
        <%= link_to t('defaults.back'), admin_users_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>