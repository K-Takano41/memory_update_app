<div class="card shadow mt-3">
  <div class="card-header">
    <%= t('admin.defaults.edit') %>
  </div>
  <div class="card-body mx-3">
    <div>
      <%= bootstrap_form_with(model: @user, url: admin_user_path(@user), local: true) do |form| %>
        <%= render 'shared/error', object: form.object %>
        <%= form.text_field :name %>
        <%= form.text_field :email %>
        <%= form.select :role, User.roles_i18n.invert  %>
        <%= form.primary %>
        <%= link_to t('admin.defaults.back'), 'javascript:history.back()', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>