<div class="card shadow mt-3">
  <div class="card-header">
    <%= t('defaults.show') %>
  </div>
  <div class="card-body mx-3">
    <div>
      <div class="mb-3">
        <div>
          <%= User.human_attribute_name(:name) %>
        </div>
        <div class="border rounded p-1">
          <%= @user.name %>
        </div>
      </div>
      <div class="mb-3">
        <div>
          <%= User.human_attribute_name(:email) %>
        </div>
        <div class="border rounded p-1">
          <%= @user.email %>
        </div>
      </div>
      <div class="mb-3">
        <div>
          <%= User.human_attribute_name(:created_at) %>
        </div>
        <div class="border rounded p-1">
          <%= l @user.created_at, format: :short %>
        </div>
      </div>
      <div class="mb-3">
        <div>
          <%= User.human_attribute_name(:updated_at) %>
        </div>
        <div class="border rounded p-1">
          <%= l @user.updated_at, format: :short %>
        </div>
      </div>
      <%= link_to t('defaults.edit'), edit_admin_user_path, class: "btn btn-primary" %>
      <%= link_to t('defaults.index'), admin_users_path, class: "btn btn-primary" %>
    </div>
  </div>