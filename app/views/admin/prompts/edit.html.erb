<div class="card shadow mt-3">
  <div class="card-header">
    <%= t('admin.defaults.edit') %>
  </div>
  <div class="card-body mx-3">
    <div>
      <%= bootstrap_form_with(model: @prompt, url: admin_prompt_path(@prompt), local: true) do |form| %>
        <%= render 'shared/admin_error', object: form.object %>
        <%= form.text_field :question %>
        <%= form.text_area :bad_prompt, rows: "3" %>
        <%= form.text_area :bad_negative_prompt, rows: "3" %>
        <%= form.text_area :good_prompt, rows: "3" %>
        <%= form.text_area :good_negative_prompt, rows: "3" %>
        <%= form.primary %>
        <%= link_to t('admin.defaults.back'), 'javascript:history.back()', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>