<div class="container pt-3">
  <div class="row justify-content-center">
    <h2 class="text-center"><%= t('.title') %></h2>
    <div class="col-4 bg-white border border-dark pt-3">
      <%= bootstrap_form_with(model: @user) do |form| %>
        <%= form.text_field :name %>
        <%= form.email_field :email %>
        <%= form.password_field :password, help: t('.password_html')  %>
        <%= form.password_field :password_confirmation %>
        <div class="text-center">
          <%= form.primary %>
        </div>
      <% end %>
      <p class="text-center my-1">OR</p>
      <%= button_to "/auth/twitter2", method: :post, data: { turbo: false }, class: "btn btn-primary mb-3 d-block mx-auto" do %>
        <i class="fa-brands fa-twitter"></i> Sign in with Twitter
      <% end %>
    </div>
  </div>
</div>