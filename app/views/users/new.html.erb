<div class="container pt-3">
  <div class="row justify-content-center">
    <%= render partial: "shared/error_messages",  locals: { object: @user }%>
    <h2 class="text-center"><%= t('.title') %></h2>
    <div class="col-4 bg-white border border-dark pt-3">
      <%= form_with model: @user, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control" %>
          <p class="form-text"><%= t('defaults.password_message') %></p>
        </div>
        <div class="form-group mb-3">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>
        <%= form.submit class: "btn btn-primary d-block mx-auto" %>
      <% end %>
      <p class="text-center my-1">OR</p>
      <%= button_to "/auth/twitter2", method: :post, data: { turbo: false }, class: "btn btn-primary mb-3 d-block mx-auto" do %>
        <i class="fa-brands fa-twitter"></i> Sign in with Twitter
      <% end %>
    </div>
  </div>
</div>