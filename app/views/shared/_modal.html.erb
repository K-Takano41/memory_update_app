<%= turbo_frame_tag "modal" do %>
  <div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" data-controller="modal">
    <div class="modal-dialog modal-dialog-centered ">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">タイトル</h5>
        </div>
        <div class="modal-body">
          <div class="d-flex flex-wrap">
            <% Prompt.all.each do |prompt| %>
              <div class="flex-fill mb-1">
                <%= link_to prompt.question, bad_event_image_path(bad_event, prompt_id: prompt.id), class: "btn btn-primary btn-block", data: { turbo: false } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>