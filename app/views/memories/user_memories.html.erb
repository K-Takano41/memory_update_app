<div class="container user-container">
  <div class="row justify-content-center">
    <div class="col-10 col-lg-12 mt-2">
      <div class="text-center">
        <h2><%= t('.title') %></h2>
        <p><%= t('.message') %></p>
      </div>
      <div class="book bound">
        <div class="pages">
          <% if @memories.present? %>
            <%= render partial: "user_memory", collection: @memories, as: :memory %>
          <% else %>
            <div class="page"></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

