<div class="container">
  <div class="row mx-0 justify-content-center">
    <div class="col-10 col-lg-6 mt-2 border border-dark bg-white good-container">
      <div class="text-center my-2 pb-2 border-bottom">
        <%= image_tag @memory.good_image.url, class: "show-good_image",size: '300x400' %>
      </div>
      <div class="my-2 p-2">
        <p><%= t('memories.show.registered_events') %></p>
        <ul>
          <% @good_events.each do |event| %>
            <li class="my-2">
              <%= link_to event.title, good_event_path(event), class: "text-black"%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

