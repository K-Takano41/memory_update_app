<div class="container pt-3">
  <div class="row justify-content-center">
    <h2 class="text-center"><%= t('.title') %></h2>
    <div class="col-4 bg-white border border-dark pt-3 mt-5">
      <%= bootstrap_form_with(url: login_path, local: true) do |form| %> 
        <%= form.email_field :email, label: User.human_attribute_name(:email) %>
        <%= form.password_field :password, label: User.human_attribute_name(:password) %>
        <div class="text-center">
          <%= form.primary t('defaults.login') %>
        </div>
      <% end %>
      <p class="text-center my-1">OR</p>
      <%= button_to "/auth/twitter2", method: :post, data: { turbo: false }, class: "btn btn-primary mb-3 d-block mx-auto" do %>
        <i class="fa-brands fa-twitter"></i> Sign in with Twitter
      <% end %>
    </div>
  </div>
</div>