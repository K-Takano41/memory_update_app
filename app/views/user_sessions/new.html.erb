<div class="container pt-3">
  <div class="row justify-content-center">
    <h2 class="text-center"><%= t('.title') %></h2>
    <div class="col-6 col-md-4 bg-white border border-dark pt-3 mt-5">
      <%= form_with url: login_path, local: true, method: :post do |form| %>
        <div class="form-group mb-3">
          <%= form.label :email, User.human_attribute_name(:email) %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :password, User.human_attribute_name(:password) %>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <%= form.submit t('defaults.login'), class: "btn btn-primary d-block mx-auto" %>
      <% end %>
      <p class="text-center my-1">OR</p>
      <%= button_to "/auth/twitter2", method: :post, data: { turbo: false }, class: "btn btn-primary mb-3 d-block mx-auto" do %>
        <i class="fa-brands fa-twitter"></i> Sign in with Twitter
      <% end %>
    </div>
  </div>
</div>